<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Skills_activity">
    <RelativeLayout
        android:id="@+id/toolbarID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="3dp"
        android:paddingBottom="5dp"
        tools:context=".loginAndRegistration.container_fragment_registration_users"
        tools:ignore="ExtraText,ScrollViewSize,UselessLeaf">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/poppinsemibold"
            android:text="Skills details"
            android:textAlignment="center"
            android:textColor="@color/material_blue_grey_80"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:id="@+id/backLayoutService"
            android:layout_width="50dp"
            android:layout_height="30dp"

            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="InefficientWeight,MissingConstraints,RtlSymmetry">

            <ImageView
                android:id="@+id/shop_edit_backArrowImage"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/back"
                android:tint="@color/material_blue_grey_80"
                tools:ignore="ContentDescription,NestedWeights,UseAppTint"
                tools:layout_editor_absoluteX="339dp"
                tools:layout_editor_absoluteY="122dp" />
        </LinearLayout>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:elevation="3dp"
                android:id="@+id/job_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbarID"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/dropshadow_two"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Introduce yourself"
                        android:textColor="@color/material_blue_grey_80"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_edit"
                        android:tint="@color/material_blue_grey_80"
                        tools:ignore="UseAppTint" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/job_description_text"
                    android:layout_width="match_parent"
                    android:text="Tell us about yourself . . ."
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <LinearLayout
                android:elevation="3dp"
                android:id="@+id/job_experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbarID"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/dropshadow_two"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Job Experience/s"
                        android:textColor="@color/material_blue_grey_80"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_edit"
                        android:tint="@color/material_blue_grey_80"
                        tools:ignore="UseAppTint" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/job_experience_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Tell us about your job experience . . ."
                    android:layout_marginBottom="10dp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <LinearLayout
                android:elevation="3dp"
                android:id="@+id/job_skill_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbarID"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/dropshadow_two"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/skillText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Add a skill/s"
                        android:textColor="@color/material_blue_grey_80"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                        <ImageView
                            android:src="@drawable/ic_skill_icon"
                            android:tint="@color/grey"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="3dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_toEndOf="@id/skillText"
                            tools:ignore="UseAppTint" />
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_edit"
                        android:tint="@color/material_blue_grey_80"
                        tools:ignore="UseAppTint" />
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="50dp"
                android:elevation="3dp"
                android:id="@+id/job_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbarID"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/dropshadow_two"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginStart="5dp"
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Salary range:"
                        android:textColor="@color/material_blue_grey_80"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/salary_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/text"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Salary range"
                        tools:ignore="HardcodedText" />
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_edit"
                        android:tint="@color/material_blue_grey_80"
                        tools:ignore="UseAppTint" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>