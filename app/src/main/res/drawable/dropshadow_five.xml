<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>

            <item
                >
                <shape>
                    <gradient
                        android:startColor="@color/brown"
                        android:endColor="@color/brownish"
                        android:angle="270" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#FDD835"/>


                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>

                    <gradient
                        android:startColor="#ffc36e"
                        android:endColor="@color/fbWhite"
                        android:angle="270" />
                    <corners
                        android:radius="19dp"/>

                </shape>
            </item>
        </layer-list>
    </item>
</selector>