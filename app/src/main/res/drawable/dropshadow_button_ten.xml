<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>

                    <!-- alttan gölge -->
                    <corners android:radius="19dp"/>
                </shape>
            </item>
            <!-- BUTTON alttan gölge
              android:right="5px" to make it round-->
            <item

                >
                <shape>
                    <gradient
                        android:startColor="#f9a640"
                        android:endColor="#f9a640"
                        android:angle="270" />
                    <corners
                        android:radius="19dp"/>

                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#f9a640"/>
                    <corners android:radius="19dp"/>

                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <gradient
                        android:startColor="@color/color_platteYellow"
                        android:endColor="@color/brown"
                        android:angle="270" />
                    <corners
                        android:radius="19dp"/>

                </shape>
            </item>
        </layer-list>
    </item>
</selector>